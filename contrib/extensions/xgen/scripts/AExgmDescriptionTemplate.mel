global proc AExgmDescriptionTemplate(string $nodeName)
{
    editorTemplate -beginScrollLayout;

    AExgmSuppressShape;
	AEshapeTemplate $nodeName;

    editorTemplate -addExtraControls;
    editorTemplate -endScrollLayout;
}
