global proc ArnoldRender(int $width, int $height, int $doShadows, int $doGlowPass, string $camera, string $options)
{
   // Make sure the ArnoldRenderOptions node exists
   createNode -skipSelect -shared -n "defaultArnoldRenderOptions" ArnoldRenderOptions;

   arnoldRender -cam $camera -w $width -h $height;   
}

global proc ArnoldBatchRender(string $option)
{
   string $cmd = "arnoldRender -batch " + $option;
   eval $cmd;   
}

global proc ArnoldIprStart(string $editor, int $resolutionX, int $resolutionY, string $camera)
{
   // Make sure the ArnoldRenderOptions node exists
   createNode -skipSelect -shared -n "defaultArnoldRenderOptions" ArnoldRenderOptions;

   arnoldIpr -cam $camera -w $resolutionX -h $resolutionY -mode start;   
}

global proc ArnoldIprStop()
{
   arnoldIpr -mode stop;   
}

global proc int ArnoldIprIsRunning()
{
   $val = `arnoldIpr`;
   return $val;   
}

global proc ArnoldIprRender(int $width, int $height, int $doShadows, int $doGlowPass, string $camera)
{
   arnoldIpr -cam $camera -w $width -h $height -mode render;   
}

global proc ArnoldIprRefresh()
{
   arnoldIpr -mode refresh;   
}

global proc ArnoldIprPause(string $editor, int $pause)
{
   if ($pause)
   {
      arnoldIpr -mode pause;
   }
   else
   {
      arnoldIpr -mode unpause;
   }   
}

global proc ArnoldIprChangeRegion(string $renderPanel)
{
   arnoldIpr -mode region;   
}
