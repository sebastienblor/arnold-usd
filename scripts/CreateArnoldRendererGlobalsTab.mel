
global proc UpdateRenderSettings()
{
   int $flag = `getAttr defaultArnoldRenderOptions.threads_autodetect` == false;
   attrControlGrp -edit -enable $flag os_threads;
}

global proc UpdateSamplingSettings()
{
   int $flag = `getAttr defaultArnoldRenderOptions.use_sample_clamp` == true;
   attrControlGrp -edit -enable $flag ss_max_value;
}

global proc UpdateMotionBlurSettings()
{
   int $flag = `getAttr defaultArnoldRenderOptions.motion_blur_enable` == true;
   attrControlGrp -edit -enable $flag mb_camera_enable;
   attrControlGrp -edit -enable $flag mb_objects_enable;
   attrControlGrp -edit -enable $flag mb_object_deform_enable;
   attrControlGrp -edit -enable $flag mb_lights_enable;
   attrControlGrp -edit -enable $flag mb_shutter_size;
   attrControlGrp -edit -enable $flag mb_shutter_offset;
   attrControlGrp -edit -enable $flag mb_shutter_type;
   attrControlGrp -edit -enable $flag mb_motion_steps;
   attrControlGrp -edit -enable $flag mb_motion_frames;
}

global proc UpdateLogSettings()
{
   string $name = `getAttr defaultArnoldRenderOptions.log_filename`;
   
   attrControlGrp -edit -enable ($name != "") log_file_verbosity;
}

proc string GetBackgroundShader()
{
   string $conns[] = `listConnections -s 1 -d 0 -p 1 defaultArnoldRenderOptions.background`;
   if (size($conns) == 1)
   {
      string $tokens[];
      tokenize $conns[0] "." $tokens;
      return $tokens[0];
   }
   return "";
}

global proc UpdateBackgroundSettings()
{
   string $node = GetBackgroundShader();

   textField -edit -text $node environment_background;
}

global proc ShowBackgroundAE()
{
   string $node = GetBackgroundShader();
   if ($node != "")
   {
      select -r $node;
   }
}

global proc ChangeBackground(string $node, string $field)
{
   connectAttr -f ($node+".message") defaultArnoldRenderOptions.background;
   textField -edit -text $node $field;
   ShowBackgroundAE();
}

global proc CreateBackground(string $type, string $field)
{
   string $node = `shadingNode -asShader $type`;
   ChangeBackground($node, $field);
}

global proc DisconnectBackground(string $field)
{
   string $node = GetBackgroundShader();
   if ($node != "")
   {
      disconnectAttr ($node+".message") defaultArnoldRenderOptions.background;
      textField -edit -text "" $field;
   }
}

global proc DeleteBackground(string $field)
{
   string $node = GetBackgroundShader();
   if ($node != "")
   {
      disconnectAttr ($node+".message") defaultArnoldRenderOptions.background;
      textField -edit -text "" $field;

      string $parent, $parents[] = `listRelatives -allParents -fullPath`;
      delete $node;
      for ($parent in $parents)
      {
         if (`objExists $parent` == 0)
         {
            continue;
         }
         string $children[] = `listRelatives -children $parent`;
         if (size($children) == 0)
         {
            delete $parent;
         }
      }
   }
}

global proc BuildBackgroundMenu(string $popup, string $field)
{
   string $item;
   string $switches[] = `ls -type ArnoldRaySwitchShader`;
   string $skies[] = `ls -type ArnoldSkyShader`;

   popupMenu -edit -deleteAllItems $popup;

   for ($item in $skies)
   {
      menuItem -parent $popup -label $item -command ("ChangeBackground(\""+$item+"\", \""+$field+"\")");
   }

   for ($item in $switches)
   {
      menuItem -parent $popup -label $item -command ("ChangeBackground(\""+$item+"\", \""+$field+"\")");
   }

   menuItem -parent $popup -divider true;

   menuItem -parent $popup -label "Create Sky Shader" -command ("CreateBackground(\"ArnoldSkyShader\", \""+$field+"\")");
   menuItem -parent $popup -label "Create RaySwitch Shader" -command ("CreateBackground(\"ArnoldRaySwitchShader\", \""+$field+"\")");

   menuItem -parent $popup -divider true;

   menuItem -parent $popup -label "Disconnect" -command ("DisconnectBackground(\""+$field+"\")");

   menuItem -parent $popup -divider true;

   menuItem -parent $popup -label "Delete" -command ("DeleteBackground(\""+$field+"\")");
}

global proc SelectAtmosphere()
{
   int $bkg = `getAttr defaultArnoldRenderOptions.atmosphere`;

   switch ($bkg)
   {
      case 0:
      break;
      
      case 1: // Fog
      {
         createNode -shared -n "defaultFogShader" ArnoldFogShader;
      }
      break;
      
      case 2: // Volume Scattering
      {
         createNode -shared -n "defaultVolumeScatteringShader" ArnoldVolumeScatteringShader;
      }
      break;
   }
}

