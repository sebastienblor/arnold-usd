global proc CreateArnoldEnvironmentSettings()
{
   setUITemplate -pushTemplate attributeEditorTemplate;
   columnLayout -adjustableColumn true;
      
      rowLayout -adjustableColumn 2 -numberOfColumns 3;
         text -label "Background";
         string $bgfield = `textField -editable false environment_background`;
         string $bgpopup = `popupMenu -parent $bgfield`;
         popupMenu -edit -postMenuCommand ("BuildBackgroundMenu(\""+$bgpopup+"\", \""+$bgfield+"\")") $bgpopup;
         button -label "AE" -height 22 -command "ShowBackgroundAE";
         setParent ..;

      string $conns[] = `listConnections -s 1 -d 0 -shapes 1 defaultArnoldRenderOptions.background`;
      if (size($conns) == 1)
      {
         textField -edit -text $conns[0] $bgfield;
      }

      separator -style "none";
            
      attrControlGrp -label "Atmosphere"
         -attribute defaultArnoldRenderOptions.atmosphere
         -cc SelectAtmosphere
         es_atmosphere;

      button -label "Edit Atmosphere" -c SelectAtmosphere;

      setParent ..;

   setUITemplate -popTemplate;
}

