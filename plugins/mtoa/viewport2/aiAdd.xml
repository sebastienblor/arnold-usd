{
    return  val1 + val2;  
}
            ]]>
      </source>
    </implementation>
    <implementation  render="OGSRenderer" language="GLSL" lang_version="3.000000" >
      <function_name val="aiAdd" />
      <source>
        <![CDATA[
vec3 aiAdd(vec3 val1, vec3 val2)
{
    return  val1 + val2;
}
            ]]>
      </source>
    </implementation>
  </implementation>
</fragment>